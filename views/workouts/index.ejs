<%- include('../partials/header') %>

<h2>Workout List</h2>
<table>
  <thead>
    <tr>
      <th>Workout</th>
      <th>Workout Notes</th>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% workouts.forEach(f=>{ %>
    <tr>
      <td><%= f.workType %></td>
      <td><%= f.workNote %></td>
      <td><%= f.workDate.toLocaleDateString() %></td>
      <td><a href="/workouts/<%= f._id %>">SELECT</a></td>
      <td><form action="/workouts/<%=f._id%>?_method=DELETE" class="delete-form" method="POST">
        <button type="submit">Delete Workout</button></form></td>
    </tr>
    <% })%>
  </tbody>
</table>

<%- include('../partials/footer') %>