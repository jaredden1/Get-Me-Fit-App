<%- include('../partials/header') %>

<h2>All Cardio Workouts</h2>
<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Duration</th>
      <th>Distance</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% cardioList.forEach(cardio => { %>
    <tr>
      <td><%= cardio.activity %></td>
      <td><%= cardio.duration %> minutes</td>
      <td><%= cardio.distance ? cardio.distance + ' miles' : 'N/A' %></td>
      <td><%= cardio.createdAt.toLocaleString() %></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>