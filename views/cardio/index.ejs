<%- include('../partials/header') %>

<h2 class="all-cardio">All Cardio Workouts</h2>
<table>
  <thead>
    <tr>
      <th>Activity</th>
      <th>Duration</th>
      <th>Distance</th>
      <th>Date</th>
    </tr>
  </thead>
  <tbody>
    <% cardioList.forEach(cardio => { %>
    <tr>
      <td><%= cardio.activity %></td>
      <td><%= cardio.duration %> minutes</td>
      <td><%= cardio.distance ? cardio.distance + ' miles' : 'N/A' %></td>
      <td><%= cardio.createdAt.toLocaleDateString() %></td>
      <td><a href="/cardio/<%= cardio._id %>/edit">Update Cardio</a>
       <td><form action="cardio/<%=cardio._id%>?_method=DELETE" class="delete-form" method="POST">
        <button type="submit">Delete Cardio</button></form></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>