<%- include('../partials/header') %>

<h2 class="all-cardio">Cardio Workouts</h2>

<table>

  <thead>
    <tr>
      <th>Activity</th>
      <th>Duration</th>
      <th>Distance</th>
      <th>Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% cardioList.forEach(cardio => { %>
    <tr>
      <td><%= cardio.activity %></td>
      <td><%= cardio.duration %> minutes</td>
      <td><%= cardio.distance ? cardio.distance + ' miles' : 'N/A' %></td>
      <td><%= cardio.createdAt.toLocaleDateString() %></td>
      <td><a href="/cardio/<%= cardio._id %>/edit" class="table-btn">Update Cardio</a>
       <td><form action="cardio/<%=cardio._id%>?_method=DELETE" class="delete-form" method="POST">
        <button class="del-button" type="submit">
          <i class="fas fa-trash-alt"></i>
        </button> 
      </form>
    </tr>
    <% }) %>
  </tbody>
  
</table>

<%- include('../partials/footer') %>